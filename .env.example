# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/mydb"

# NextAuth (for admin UI authentication)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl

# OAuth Providers (for admin login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_ID=your-github-id
GITHUB_SECRET=your-github-secret

# API Authentication Keys
# Generate these with: node scripts/generate-api-keys.js
# Master admin key - full access (read, write, admin permissions)
API_MASTER_KEY=sk_admin_xxxxxxxxxxxxxxxxxxxxx
# Sync webhook key - for Google Sheets webhooks (write permission)
SYNC_API_KEY=sk_sync_xxxxxxxxxxxxxxxxxxxxxx
# Read-only key - for queries and searches (read permission only)
API_READ_KEY=sk_read_xxxxxxxxxxxxxxxxxxxxxx

# JWT Secret (for customer payment portal authentication)
JWT_SECRET=your-jwt-secret-here-generate-with-openssl

# Email Configuration (for sending payment links)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Payment Gateway (if using)
ALPHAPAY_PARTNER_CODE=your-partner-code
ALPHAPAY_CREDENTIAL_CODE=your-credential-code

# Google Sheets Integration (if needed)
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_SHEET_ID=your-spreadsheet-id

# Application URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000
